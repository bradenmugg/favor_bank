<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p><%= @user.name %></p>
      </h1>
      <p><%= @user.favor_points %> Favor Points</p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.favors.any? %>
      <h3>Favors (<%= @user.favors.count %>)</h3>
      <ol class="favors">
        <%= render @favors %>
      </ol>
      <%= will_paginate @favors %>
    <% end %>
  </div>
</div>
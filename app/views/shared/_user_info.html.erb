<%= link_to gravatar_for(current_user), current_user %>
<h1><%= current_user.name %></h1>
<span><%= link_to "view my profile", current_user %></span>
<span><%= pluralize(current_user.favors.count, "Favor Request") %></span>
<% if current_user.favor_points >= 0 %>
  <span class="positive"><%= pluralize(current_user.favor_points, "Favor Point") %></span>
<% end %>
<% if current_user.favor_points < 0 %>
  <span class="negative"><%= pluralize(current_user.favor_points, "Favor Point") %></span>
<% end %>
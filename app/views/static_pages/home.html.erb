<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="favor_form">
        <%= render 'shared/favor_form' %>
      </section>
    </aside>
  <div class="col-md-8">
      <h3>Favors</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1>Welcome to Favor Bank</h1>
  <p>
    This is the home page for Favor Bank, a new service that makes it easier
    to help and get help from people in your network.
  </p>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="favor_form">
        <%= render 'shared/favor_form' %>
      </section>
    </aside>
  <div class="col-md-8">
    <div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Open Favors
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu sort-dropdown" aria-labelledby="dropdownMenu1">
    <li><a href="#" id="all">All Favors</a></li>
    <li><a href="#" id= "in-progress">Open Favors Descending</a></li>
    <li><a href="#" id= "completed">My Favor Requests</a></li>
    <li><a href="#" id= "none">My Help Offers</a></li>
  </ul>
</div>
    <div class="feed-container"></div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1>Welcome to Favor Bank</h1>
  <p>
    This is the home page for Favor Bank, a new service that makes it easier
    to help and get help from people in your network.
  </p>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

